/**
 * Implementation of hook_uninstall().
 */
function filepicker_uninstall() {
  // Remove tables.
  drupal_uninstall_schema('filepicker');

  db_query("DELETE FROM {variable} WHERE name LIKE 'filepicker_%';");
}
